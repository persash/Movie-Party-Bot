{
    "compilerOptions": {
      "rootDir": "src",
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowJs": false
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "build"
    ]
  }